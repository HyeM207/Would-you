<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.guru2_contestapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Guru2_ContestApp">

        <!--Splash Activity-->
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <!--Splash Activity-->

        <activity android:name=".DeleteAccountActivity"
            android:label="회원 탈퇴"
            android:parentActivityName=".NavigationActivity"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".DeveloperSupportActivity"
            android:label="개발자 문의"
            android:parentActivityName=".NavigationActivity" />

        <activity
            android:name=".ApplicantPagerActivity"
            android:label="팀 신청자 정보"
            android:parentActivityName=".ApplicantListActivity"/>
        <activity
            android:name=".ResumeActivity"
            android:parentActivityName=".NavigationActivity"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name=".TeamDetailActivity"
            android:parentActivityName=".NavigationActivity"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name=".BuildTeamActivity"
            android:parentActivityName=".NavigationActivity"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name=".ContestDetailActivity"
            android:parentActivityName=".NavigationActivity" />
        <activity android:name=".NavigationActivity" />
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SetProfileActivity"
            android:label="프로필 변경"
            android:parentActivityName=".NavigationActivity" />
        <activity
            android:name=".SettingActivity"
            android:label="설정"
            android:parentActivityName=".NavigationActivity"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name=".ApplicantListActivity"
            android:label="팀 신청자 목록"
            android:parentActivityName=".NavigationActivity" />
        <activity
            android:name=".SearchIdPwActivity"
            android:label="회원가입"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SignUp3Activity"
            android:label="회원가입"
            android:parentActivityName=".SignUp2Activity"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name=".SignUp2Activity"
            android:label="회원가입"
            android:parentActivityName=".SignUpActivity"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name=".SignUpActivity"
            android:label="회원가입"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden"/>
    </application>

</manifest>